<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.zs.it.testmaterialdesign.MuchSharedTransitionActivity">

    <ImageView
        android:id="@+id/iv_t1"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:src="@mipmap/ic_launcher"
        android:transitionName="@string/transition_name2"/>



    <ImageView
        android:id="@+id/iv_t2"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:src="@mipmap/ic_launcher"
        android:layout_toRightOf="@id/iv_t1"
        android:transitionName="@string/transition_name4"/>

    <TextView
        android:id="@+id/tv_t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_t2"
        android:layout_marginTop="16dp"
        android:textSize="30dp"
        android:textColor="@android:color/holo_red_dark"
        android:text="多个共享视图"
        android:transitionName="@string/transition_name3"/>
</RelativeLayout>
